<div class="form-container">
  <h1>Create a New Session</h1>
  <%= form_with model: @session, local: true do |form| %>
    <div class="form-group">
      <%= form.label :name, "Session Name" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :tag_id, "Select Tag" %>
      <%= form.collection_select :tag_id, Tag.all, :id, :name, prompt: "Choose a tag", class: "form-control" %>
    </div>
    <%= form.submit "Create Session", class: "btn btn-success" %>
  <% end %>
</div>
